{
  "$schema": "https://opencode.ai/config.json",
  "model": "zai/glm-4.7",
  "small_model": "zai/glm-4.7",
  "default_agent": "orchestrator",
  "instructions": ["CONTRIBUTING.md", "docs/guidelines.md"],
  "compaction": {
    "auto": true,
    "prune": true
  },
  "watcher": {
    "ignore": [
      "node_modules/**",
      "dist/**",
      "build/**",
      ".git/**",
      "vendor/**",
      "coverage/**",
      ".next/**",
      ".nuxt/**",
      "__pycache__/**"
    ]
  },
  "permission": {
    "skill": {
      "*": "allow"
    },
    "task": {
      "*": "allow"
    }
  },
  "tools": {
    "write": true,
    "edit": true,
    "read": true,
    "bash": true,
    "webfetch": true,
    "grep": true,
    "glob": true,
    "list": true,
    "lsp": true,
    "patch": true,
    "todowrite": true,
    "todoread": true,
    "question": true,
    "skill": true
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "sequentialthinking": {
      "type": "remote",
      "url": "https://remote.mcpservers.org/sequentialthinking/mcp",
      "enabled": true
    }
  },
  "agent": {
    "orchestrator": {
      "mode": "primary",
      "model": "zai/glm-4.7",
      "temperature": 0.3,
      "permission": {
        "task": {
          "orchestrator-*": "allow",
          "*": "allow"
        }
      }
    },
    "code-reviewer": {
      "mode": "subagent",
      "model": "zai/glm-4.7",
      "temperature": 0.1,
      "tools": {
        "write": false,
        "edit": false,
        "patch": false,
        "bash": false
      }
    },
    "security-auditor": {
      "mode": "subagent",
      "model": "zai/glm-4.7",
      "temperature": 0.2,
      "tools": {
        "write": false,
        "edit": false,
        "patch": false,
        "bash": false
      }
    },
    "implementation": {
      "mode": "subagent",
      "model": "zai/glm-4.7",
      "temperature": 0.2
    },
    "frontend-specialist": {
      "mode": "subagent",
      "model": "zai/glm-4.7",
      "temperature": 0.3
    },
    "backend-specialist": {
      "mode": "subagent",
      "model": "zai/glm-4.7",
      "temperature": 0.3
    },
    "database-expert": {
      "mode": "subagent",
      "model": "zai/glm-4.7",
      "temperature": 0.2,
      "permission": {
        "bash": {
          "*": "ask",
          "git*": "allow",
          "grep*": "allow",
          "cat*": "allow",
          "ls*": "allow"
        }
      }
    }
  }
}
